{{#article}}
<h1>Edit article</h1>

<form method="post" action="/edit">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="{{name}}">

    <label for="slug">Slug</label>
    <input type="text" name="slug" id="slug" value="{{slug}}">

    <label for="image">Image</label>
    <input type="text" name="image" id="image" value="{{image}}">

    <label for="body">Body</label>
    <textarea name="body" id="body">{{body}}</textarea>

    <label for="author_id">Author</label>
    <input name="author_id" id="author_id" value="{{author_id}}">

    <button>Edit</button>
</form>

<h2>Delete article</h2>

<p>
    If you want to remove this article, use the button below
</p>

<form method="post" action="/article/delete/{{id}}">
    <input type="hidden" name="action" value="delete">
    <button class="danger">Delete</button>
</form>
{{/article}}